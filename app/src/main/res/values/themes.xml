<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="NasaImagesAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#273469</item>
        <item name="colorPrimaryVariant">#1C254A</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#E4D9FF</item>
        <item name="colorSecondaryVariant">#E4D9FF</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="NasaAppToolbarTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">18sp</item>
        <item name="lineHeight">26sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/circular_std_medium</item>
        <item name="android:fontFamily">@font/circular_std_medium</item>
    </style>

</resources>